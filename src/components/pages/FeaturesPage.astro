---
import { features } from '../../constants';
---

<section class='features section' id='features'>
	<h2 class='section__title' data-title='Features'>Our Best Features</h2>

	<div class='features__grid container grid'>
		{
			features.map(({ img, title, description }) => {
				return (
					<div class='features__item'>
						<img src={img} alt='Feature Item' class='feature__img' />

						<h3 class='feature__title'>{title}</h3>
						<p class='feature__description'>{description}</p>

						<img src={'/assets/shape.png'} alt='Shape' class='feature__shape' />
					</div>
				);
			})
		}
	</div>
</section>

<style>
	.features__grid {
		grid-template-columns: repeat(4, 1fr);
	}

	.features__item {
		background-color: var(--container-color);
		padding: 2rem;
		border-radius: var(--radius);
		position: relative;
		transition: 0.5s var(--transition);
	}

	.features__item::before {
		content: '';
		position: absolute;
		inset: 0.75rem;
		border: 2px solid var(--first-color);
		opacity: 0.2;
		border-radius: inherit;
	}

	.feature__img {
		width: 60px;
		margin-bottom: 1.25rem;
	}

	.feature__title {
		font-size: var(--h3-font-size);
		margin-bottom: 0.625rem;
	}

	.feature__shape {
		position: absolute;
		width: 120px;
		right: 1.25rem;
		top: 3rem;
		opacity: 0.2;
	}

	/*===============
 * Hover Effect
===============*/

	.features__item:hover {
		transform: translateY(-0.5rem);
	}
</style>
